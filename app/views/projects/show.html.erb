<div class="wrapper">
  <div class="panel">
    <div class="panel-heading">
      <h1>
        <%= @project.title %>
      </h1>
      <div>
        <div class="float-right panel-fix-buttons">
          <%=link_to "Back", projects_path, class:"btn btn-primary" %>
          <%- if current_admin %>
            <%=link_to "Delete", project_path(@project), method: :delete, data: {confirm: "Confirm delete?"}, class: "btn btn-danger" %>
            <%=link_to "Edit", edit_project_path(@project), class:"btn btn-info" %>
            |
            <%-if @project.pinned_project == false %>
              <%=link_to "#{content_tag(:span,'',class:'glyphicon glyphicon-remove')}".html_safe, pin_Or_Unpin_Project_path(@project), method: :post, class: 'btn btn-success' %>
              Pin Project?
            <% else %>
              <%=link_to "#{content_tag(:span,'',class:'glyphicon glyphicon-ok')}".html_safe, pin_Or_Unpin_Project_path(@project), method: :post, class: 'btn btn-success' %>
              Project Pinned!
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="panel-body">
      <%= (@project.content).html_safe %>
    </div>
  </div>
</div>
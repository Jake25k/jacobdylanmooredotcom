<div class="table table-striped">
  <%-if projects.any? %>
    <%-projects.each do |project| %>
      <%=link_to project_path(project) do %>
        <div class = "col-md-6 center">
          <%=project_cover_image_with_text(project) %>
        </div>
      <% end %>
    <% end %>
  <%-else %>
      <div class="center">
        Currently no content.
      </div>
  <% end %>

</div>
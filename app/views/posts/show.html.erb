<div class="wrapper">
  <div class="panel">
    <div class="panel-heading">
      <h1>
        <%= @post.title %>
      </h1>
        <div>
          <%=link_to "Back", posts_path, class:"btn btn-primary" %>
          <%- if current_admin %>
            <%=link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Confirm delete?"}, class: "btn btn-danger" %>
            <%=link_to "Edit", edit_post_path(@post), class:"btn btn-info" %>
          <% end %>
        </div>
      </div>
    <div class="panel-body">
      <b> Published on: <%= @post.created_at.strftime("%D") %> </b> <br>
      <%-if @post.updated_at != @post.created_at %>
          <b> Edited on <%= @post.updated_at.strftime("%D") %> </b>
      <% end %>
      <div class="margin-top posts-content">
        <%= (@post.content).html_safe%>
        <%-if current_admin %>
            <%= link_to "Share on Facebook", "https://www.facebook.com/dialog/feed?app_id=145634995501895&display=popup&description=Jake Moore just made a new blog post! Read it here: #{request.original_url}&link=#{request.original_url}", target: :_blank%>
            <%= "Jake Moore just made a new blog post! View it here: #{request.original_url}" %>
        <%end%>
      </div>
    </div>
  </div>
</div>
<div class="wrapper">
  <div class="panel">
    <div class="panel-heading">
      <h1 class="title">
        <%= @post.title %>
      </h1>
        <div>
          <%=link_to "Back", posts_path, class:"btn btn-primary" %>
          <%- if current_admin %>
            <%=link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Confirm delete?"}, class: "btn btn-danger" %>
            <%=link_to "Edit", edit_post_path(@post), class:"btn btn-info" %>
          <% end %>
        </div>
      </div>
    <div class="panel-body">
      <b> Published on: <%= @post.created_at.strftime("%D") %> </b> <br>
      <%-if @post.updated_at != @post.created_at %>
          <b> Edited on <%= @post.updated_at.strftime("%D") %> </b>
      <% end %>
      <div class="margin-top posts-content">
        <%= (@post.content).html_safe%>
        <%-if current_admin %>
            <%= link_to "Share on Facebook", '',class: "btn btn-primary", data: {toggle:'modal', target:'#myModal'} %>
        <%end%>
      </div>
    </div>
  </div>
</div>

<!--Modal-->
<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title center" id="myModalLabel">Share Information:</h4>
      </div>
      <div class="modal-body">
        <%= link_to "Share", "https://www.facebook.com/dialog/feed?app_id=145634995501895&display=popup&link=#{request.original_url}", target: "_blank", class: "btn btn-primary center"%>
        <br><br>
        <%= "Copy this text:"%>
        <h3>
          <%= "Jake Moore just made a new blog post titled '#{@post.title}'. View it here! #{request.original_url}" %>
        </h3>
      </div>
    </div>
  </div>
</div>
<div class="wrapper">
  <div class="panel">
    <div class="panel-heading">
      Create New Post
    </div>
    <div class="panel-body">
      <%= simple_form_for(@post) do |f| %>
          <div class="field">
            <%= f.label :title %><br>
            <%= f.text_field :title %><br>
            <%= f.label :content %><br>
            <%= f.text_area :content, class: "tinymce", rows: "20" %>
            <%= f.input :draft, label: "Draft?", as: :boolean, checked_value: true, unchecked_value: false %>
            <%= tinymce %>
          </div>

          <br>

          <%= f.submit "Submit", class: "btn btn-primary" %>

      <% end %>
    </div>
  </div>
</div>